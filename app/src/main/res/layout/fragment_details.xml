<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragments.ProfileDetailsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/profile_details_icons"
                    android:src="@drawable/ic_account_box_black_50dp" />

                <TextView
                    android:id="@+id/profile_name_TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#cccccccc"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Name" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/profile_details_icons"
                    android:src="@drawable/ic_location_on_black_50dp" />

                <TextView
                    android:id="@+id/profile_address_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#cccccccc"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Address" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/profile_details_icons"
                    android:src="@drawable/ic_smartphone_black_50dp" />

                <TextView
                    android:id="@+id/profile_phone_number_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#cccccccc"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Phone Number" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/profile_details_icons"
                    android:src="@drawable/ic_email_black_50dp" />

                <TextView
                    android:id="@+id/profile_email_TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#cccccccc"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Email" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/profile_details_icons"
                    android:src="@drawable/ic_email_black_50dp" />

                <TextView
                    android:id="@+id/profile_skills_TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#cccccccc"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Skills" />


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="@string/profile_update_info"
                    android:textColor="@android:color/white"
                    android:textSize="12dp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </FrameLayout>
</android.support.v4.widget.NestedScrollView>